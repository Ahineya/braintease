#include "lib/program.bfm"
#include "lib/stdio.bfm"

@proc(add,
  {:add sc, } @arg1 {:, } @arg2 {br}
  @retval(sc, r0)
)

@procN(main, 4,
  @mov(t0, sb)

  @set(t1, 'H') @local_store(0, t1)
  @set(t1, 'I') @local_store(1, t1)
  @set(t1, '!') @local_store(2, t1)
  @set(t1, 0)   @local_store(3, t1)

  @local_addr(t1, 0)

  @call2(puts, @reg, sb, @reg, t1)
)
