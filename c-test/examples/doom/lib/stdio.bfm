#pragma once

#include "mmio.bfm"

@leaf(putchar,
  @mmio_write(@arg1, #HDR_TTY_OUT)
)

@proc(puts,
  @mov(t0, @arg2)
  @mov(t1, @arg1)

  @peek(sc, t1, t0)

  @while(@ne(sc, r0),
    @call1(putchar, @reg, sc)
    @inc(t0)
    @peek(sc, t1, t0)
  )

  @call1(putchar, @imm, 10)
  @set(sc, 0)
  @retval(sc, r0)
)
