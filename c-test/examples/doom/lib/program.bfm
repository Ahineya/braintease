#define prologue(locals) {
  @push(ra)
  @push(fp)
  @push(s0)
  @push(s1)
  @push(s2)
  @push(s3)

  @mov(fp, sp)

  @addi(sp, sp, locals)  
}

#define epilogue(locals) {
  @addi(sp, sp, {:-locals})

  @pop(s3)
  @pop(s2)
  @pop(s1)
  @pop(s0)
  @pop(fp)
  @pop(ra)
  
  @ret
}

#define leaf(name, body) name:{br} body{br} @ret

#define proc(name, body) {
  name:{br}
  @prologue(0)
  body{br}
  @epilogue(0)
}

#define procN(name, locals, body) {
  name:{br}
  @prologue(locals)
  body{br}
  @epilogue(locals)
}

