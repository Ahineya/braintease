#define ifelse(cond, true_branch, false_branch) {
  {:bne } cond {:, } r0, {label efelsetruebranch} {br}
  {label ifelsefalsebranch}: {br}
  false_branch {br}
  @jmp({label endifelse}){br}
  {label efelsetruebranch}: {br}
  true_branch {br}
  {label endifelse}: {br} 
}

#define if(cond, true_branch) {
